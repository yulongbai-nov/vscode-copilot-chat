{
	"compilerOptions": {
		"target": "es2024",
		"lib": ["ES2024"],
		"module": "esnext",
		"allowImportingTsExtensions": true,
		"erasableSyntaxOnly": true,
		"verbatimModuleSyntax": true,
		"noEmit": true,
		"strict": true,
		"exactOptionalPropertyTypes": false,
		"useUnknownInCatchVariables": false,
		"noUnusedLocals": true,
		"noUnusedParameters": true
	},
	"exclude": ["node_modules/**"]
}
